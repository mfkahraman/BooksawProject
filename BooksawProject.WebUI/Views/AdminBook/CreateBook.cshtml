@model CreateBookDto

@{
    ViewData["Title"] = "Kitap Ekle";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <!-- Book Title -->
        <label>Kitap Adı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <br />

        <!-- Author Name -->
        <label>Kitap Yazarı</label>
        <input type="text" asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
        <br />

        <!-- Description -->
        <label>Kitap Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
        <br />

        <!-- Price -->
        <label>Fiyat</label>
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
        <br />

        <!-- Category Dropdown -->
        <label>Kategori</label>
        <select asp-items="@ViewBag.categories" asp-for="CategoryId" class="form-control">
            <option selected disabled>Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <br />

        <!-- Image File Upload -->
        <label>Kitap Görseli Yükle</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        <br />

        <div class="col-lg-12 text-center mt-4">
            <button class="btn btn-outline-dark">Kaydet</button>
        </div>
    </div>
</form>
