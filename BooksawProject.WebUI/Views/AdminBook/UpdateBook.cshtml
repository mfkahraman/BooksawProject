@model UpdateBookDto

@{
    ViewData["Title"] = "Kitap Güncelle";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<br />
<br />
<br />
<br />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <!-- Hidden BookId (to identify which book is being updated) -->
        <input type="hidden" asp-for="BookId" />

        <!-- Book Title -->
        <label>Kitap Adı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
        <br />

        <!-- Author Name -->
        <label>Kitap Yazarı</label>
        <input type="text" asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
        <br />

        <!-- Description -->
        <label>Kitap Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
        <br />

        <!-- Price -->
        <label>Fiyat</label>
        <input type="number" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
        <br />

        <!-- Category Dropdown -->
        <label>Kategori</label>
        <select asp-items="@ViewBag.categories" asp-for="CategoryId" class="form-control">
            <option selected disabled>Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <br />

        <!-- Existing Image (Display current image) -->
        <div>
            <label>Mevcut Kitap Görseli</label>
            <img src="@Model.ImageUrl" alt="Book Image" style="width: 100px; height: 100px;" />
        </div>
        <br />

        <!-- New Image File Upload -->
        <label>Yeni Kitap Görseli (Opsiyonel)</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        <br />

        <div class="col-lg-12 text-center mt-4">
            <button class="btn btn-outline-dark">Güncelle</button>
        </div>
    </div>
</form>
